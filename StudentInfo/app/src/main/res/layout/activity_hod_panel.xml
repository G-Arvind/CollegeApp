<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hod_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37474F"
    tools:context="com.example.arvind.studentinfo.HodPanel">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/wel"
        android:textSize="30dp"
        android:text="Welcome:"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <at.markushi.ui.CircleButton
        android:id="@+id/addstaff"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/addp"
        app:cb_color="#8BC34A"
        app:cb_pressedRingWidth="8dip"
        android:layout_marginLeft="40dp"
     />

    <at.markushi.ui.CircleButton
        android:id="@+id/delstaff"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/remove"
        app:cb_color="#03A9F4"
        app:cb_pressedRingWidth="8dip"
        android:layout_marginLeft="90dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add staff"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove staff"
            android:textSize="20dp"
            android:layout_marginLeft="95dp"
            android:textColor="#ffffff"
           />


    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp">


       <at.markushi.ui.CircleButton
           android:id="@+id/editstaff"
           android:layout_width="100dip"
           android:layout_height="100dip"
           android:src="@drawable/edit"
           app:cb_color="#E91E63"
           app:cb_pressedRingWidth="8dip"
           android:layout_marginLeft="40dp" />


       <at.markushi.ui.CircleButton
           android:id="@+id/addhnews"
           android:layout_width="100dip"
           android:layout_height="100dip"
           android:src="@drawable/addn"
           app:cb_color="#F44336"
           app:cb_pressedRingWidth="8dip"
           android:layout_marginLeft="90dp"
          />


   </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit staff"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add news"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


    <at.markushi.ui.CircleButton
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/vnews"
        app:cb_color="#FFC107"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/vhnews"
        android:layout_marginLeft="40dp"/>



    <at.markushi.ui.CircleButton
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/exit"
        app:cb_color="#607D8B"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/exithod"
        android:layout_marginLeft="90dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view news"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="120dp" />



    </LinearLayout>

</LinearLayout>

