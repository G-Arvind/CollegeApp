<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37474F"
    tools:context="com.example.arvind.studentinfo.AdminPanel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <at.markushi.ui.CircleButton
            android:id="@+id/addhod"
            android:text="Add Hod"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/addp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            app:cb_color="#8BC34A"
            app:cb_pressedRingWidth="8dip"
            />

        <at.markushi.ui.CircleButton
            android:id="@+id/delhod"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/remove"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:text="Remove Hod"
            app:cb_color="#03A9F4"
            app:cb_pressedRingWidth="8dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add Hod"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove Hod"
            android:layout_marginLeft="110dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <at.markushi.ui.CircleButton
            android:id="@+id/edithod"
            android:text="Edit Hod"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/edit"
            app:cb_color="#F44336"
            app:cb_pressedRingWidth="8dip"
            android:layout_marginLeft="147dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit Hod"
            android:layout_marginLeft="160dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/addnews"
            android:text="Add News"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/addn"
            app:cb_color="#E91E63"
            app:cb_pressedRingWidth="8dip"
            android:layout_marginLeft="40dp"

            />
        <at.markushi.ui.CircleButton
            android:id="@+id/logout"
            android:text="Logout"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/exit"
            app:cb_color="#607D8B"
            app:cb_pressedRingWidth="8dip"
            android:layout_marginLeft="110dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add News"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:layout_marginLeft="145dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>
